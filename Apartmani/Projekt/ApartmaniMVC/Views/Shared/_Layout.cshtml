<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundle/css")
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light" style="margin-bottom: 0">
        <div class="container-fluid">
            @Html.ActionLink("Apartmani", "Apartmani", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Index", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Logout", "Logout", "Home", new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-3">
        @RenderBody()
    </div>

    <div class="card text-center">
        <div class="card-footer text-muted">
            &copy Apartmani d.o.o.
        </div>
    </div>

    @Scripts.Render("~/bundle/jq")
    @RenderSection("Scripts", required: false);
</body>
</html>
